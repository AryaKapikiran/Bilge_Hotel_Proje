@model WEB_UI.Models.KullaniciVM

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}






<h2>Index</h2>

<div class="row" style="margin-top:30px;">
    <div class="col-md-3">
        <div class="card">
            <div class="card-header">
                <h2>
                    Lütfen Giriş Yapınız
                </h2>
                <div class="card-body">

                    @if (TempData["error"] != null)
                    {
                        <h2 style="color:red;">@TempData["error"]</h2>
                    }

                <form method="post">
                    <div>
                        <label>Email:</label>
                        @Html.ValidationMessageFor(x => x.Email)
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                    </div>
                    <div>
                        <label>Şifre:</label>
                        @Html.ValidationMessageFor(x => x.Password)
                        @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })

                    </div>

                    <div>
                        <label>Şifre Tekrar</label>
                        @Html.ValidationMessageFor(x => x.ConfirmPassword)
                        @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control" })

                    </div>
                    <div>
                        <label>Ad:</label>
                        @Html.ValidationMessageFor(x => x.Ad)
                        @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })

                    </div>
                    <div>
                        <label>Soyad:</label>
                        @Html.ValidationMessageFor(x => x.Soyad)
                        @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })

                    </div>

                    <div>
                        <label>TCKN:</label>
                        @Html.ValidationMessageFor(x => x.TCKN)
                        @Html.TextBoxFor(x => x.TCKN, new { @class = "form-control" })

                    </div>

                    <div>
                        <label>TelNo:</label>
                        @Html.ValidationMessageFor(x => x.TelNo)
                        @Html.TextBoxFor(x => x.TelNo, new { @class = "form-control" })

                    </div>

                    <button type="submit" class="btn btn-primary" style="margin-top:50px; float:right;">Register</button>
                </form>
                </div>

            </div>
        </div>
    </div>
</div>